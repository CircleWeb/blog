if [ -z "$1" ]; then

    echo "目录名称缺失！"
    exit 2

elif [ -d $1 ]; then
	echo "error: $1 已经存在"
	exit 1
else
	mkdir $1
	cd $1
	mkdir css js
#	touch index.html css/style.css js/main.js
	printf "<!DOCTYPE>\n<title>Hello</title>\n<h1>Hi</h1>\n" > index.html
	echo "h1{color: red;}" > css/style.css
	printf 'var string = "Hello World"\nalert(string)' > js/main.js
	exit 0
fi